<view class="address-container">
  <!-- 页面标题 -->
  <view class="page-title">
    <text class="title">地址信息</text>
  </view>

  <!-- 地址表单 -->
  <view class="form-item">
    <text class="form-label">联系人</text>
    <input class="form-input" placeholder="请输入联系人" bindinput="handleNameInput" />
  </view>

  <view class="form-item">
    <text class="form-label">手机号码</text>
    <input class="form-input" placeholder="请输入手机号码" bindinput="handlePhoneInput" />
  </view>

  <!-- 所在地区选择 -->
  <view class="form-item">
    <text class="form-label">所在地区</text>
    <picker mode="region" bindchange="handleRegionChange">
      <view class="form-input">{{address || '请选择地区'}}</view>
    </picker>
  </view>

  <view class="form-item">
    <text class="form-label">详细地址</text>
    <!-- 绑定到handleDetailedAddressInput方法 -->
    <input class="form-input" placeholder="请输入详细地址" bindinput="handleDetailedAddressInput" />
  </view>

  <!-- 保存按钮 -->
  <view class="save-btn" bindtap="saveAddress">
    <text>保存</text>
  </view>
</view>
