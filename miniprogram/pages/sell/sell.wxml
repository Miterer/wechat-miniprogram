<view class="sell-container">
<!-- 输入名称 -->
  <view class="form-item">
  <text class="form-label">请输入宝贝名称</text>
  <input
    class="form-input"
    placeholder="如：小米15、二手iPhone..."
  />
  </view>


<!-- 选择分类 -->
  <view class="form-item">
  <text class="form-label">请选择分类</text>
  <picker
    mode="selector"
    range="{{categoryOptions}}"
    value="{{typeIndex}}"
    bindchange="handleTypeChange"
  >
    <!-- 用一个与输入框相似的容器来显示当前分类 -->
    <view class="form-picker">
      {{categoryOptions[typeIndex]}}
    </view>
  </picker>
  </view>
  <!-- 文本输入区域 -->
  <view class="desc-section">
    <textarea
      class="desc-textarea"
      placeholder="描述宝贝的品牌型号、功能成色，出手原因..."
      bindinput="handleDescInput"
      maxlength="300"
      show-confirm-bar="true"
    />
    <text class="desc-tips">* 描述越详细，卖出更快</text>
  </view>

  <!-- 图片上传区域 -->
  <view class="images-section">
    <view class="images-title">+ 添加图片</view>
    <scroll-view scroll-x="true" class="images-scroll">
      <view class="images-list">
        <block wx:for="{{images}}" wx:key="index">
          <view class="image-item">
            <image class="image-preview" src="{{item}}" mode="aspectFit" />
            <image
              class="image-remove"
              src="/assets/images/close.png"
              data-index="{{index}}"
              bindtap="handleRemoveImage"
            />
          </view>
        </block>
        <!-- 添加图片按钮 -->
        <view class="image-item add-image-btn" bindtap="handleAddImage">
          <image
            class="image-plus"
            src="/assets/images/add.png"
            mode="aspectFit"
          />
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 价格与发货方式 -->
  <view class="price-section">
    <view class="price-title">价格</view>
    <input
      class="price-input"
      type="number"
      placeholder="¥0.00"
      bindinput="handlePriceInput"
    />
  </view>

  <view class="shipping-section">
    <view class="shipping-title">发货方式</view>
    <view class="shipping-method" bindtap="handleChangeShipping">
      {{shippingMethod}}
    </view>
  </view>

  <!-- 发布按钮 -->
  <view class="publish-btn" bindtap="handlePublish">
    发布
  </view>
</view>
